<div class="container">
	<% if(error !== undefined){ %>
		<h4 class="error-title">Something Went Wrong</h4>
		<p><%= error %></p>
	<% }else{ %>
	<h4 class="title">Enter Phone</h4>
	<p>We will send you access code via SMS for mobile number verification</p>
	<form action="/sms-otp">
		<label class="channel">
			<p>Select your channel:</p>
			<div class="inputs">
				<input type="radio" name="channel" checked id="sms" value="sms" /> <label for="sms">SMS</label>
				<input type="radio" name="channel" id="whatsapp" value="whatsapp"  /> <label for="whatsapp">Whatsapp</label>
			</div>
		</label>
		<div class="input-field">
			<label class="country select">
				<select name="countryCode" id="countryCode">
				</select>
			</label>
			<label>
				<input type="number" name="phoneNumber" value="" maxlength="12" autofocus placeholder="Phone" />
			</label>
		</div>
		<input type="submit" value="Submit" class="button" />
	</form>
		<% } %>

